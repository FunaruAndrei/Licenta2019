        <div class="container-fluid login-container-wrapper">
            <section class="logo-container">
                <img class="img-fluid" src="/images/Logo/Logo-transparent-lightgray.png" alt="Logo" />
            </section>
            <section class="card">
                <div class="card-header text-center">
                    Autentificare
                </div>
                <div class="card-body">
                    <div class="login-body">
                        <form id="account" method="post">

                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group user-name">
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="login-footer">
                                <a class="btn btn-sm btn-secondary" asp-page="./RegisterAdmin" asp-route-returnUrl="@Model.ReturnUrl">
                                    Cont nou
                                </a>
                                <button type="submit" class="btn btn-sm btn-primary float-right">
                                    Conectare
                                </button>
                            </div>

